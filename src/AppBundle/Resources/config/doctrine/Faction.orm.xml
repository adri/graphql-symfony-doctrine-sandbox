<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppBundle\Entity\Repository\FactionRepository" name="AppBundle\Entity\Faction" table="faction">
    <indexes>
      <index columns="type"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" column="name" length="255" unique="true"/>
    <field name="type" type="string" column="type" length="255"/>
    <many-to-many field="ships" target-entity="AppBundle\Entity\Ship">
      <join-table name="faction_ship">
        <join-columns>
          <join-column name="faction_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="ship_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
